<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">


        <TextView
                android:id="@+id/tvName"
                style="@style/list_text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Profile 01"/>


        <TextView
                android:id="@+id/tvCountSteps"
                style="@style/list_text_secundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                tools:text="60 min"/>

        <TextView
                android:id="@+id/tvSeparetor"
                style="@style/list_text_secundary"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/tvCountSteps"
                android:text=" - "/>

        <TextView
                android:id="@+id/vh_ingredient__tv__ternary_info"
                style="@style/list_text_secundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_toRightOf="@id/tvSeparetor"
                tools:text="10 lupulos"/>
    </RelativeLayout>

    <include layout="@layout/divider"/>
</LinearLayout>